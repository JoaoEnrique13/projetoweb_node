<div class="max-w-screen-xl flex-col mx-auto flex p-6 mt-15">
    {{#each params}}
    {{!-- ERRO --}}
        {{#if (eq @key "danger" ignoreCase=true)}}
            <div class="mb-5 w-full bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">{{this}}</strong>
                {{!-- <span class="block sm:inline">Tente novamente mais tarde.</span> --}}
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="window.location.href = '/consultar'">
                    <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
                </span>
            </div>
        {{/if}}

    {{!-- Sucesso --}}
        {{#if (eq @key "sucess" ignoreCase=true)}}
            <div class="mb-5 w-full bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">{{this}}</strong>
                {{!-- <span class="block sm:inline"></span> --}}
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="window.location.href = '/consultar'">
                    <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
                </span>
            </div>
        {{/if}}
    {{/each}}

    <div class="w-full relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Id
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nome
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Telefone
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Origem
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Data de Contato
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Observação
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each agendamentos}}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                {{this.id}}
                            </th>
                            <td class="px-6 py-4">
                                {{this.nome}}
                            </td>
                            <td class="px-6 py-4">
                                {{this.telefone}}
                            </td>
                            <td class="px-6 py-4">
                                {{this.origem}}
                            </td>
                            <td class="px-6 py-4">
                                {{!-- {{this.data_contato}} --}}
                                {{formatDate this.data_contato}}
                            </td>
                            <td class="px-6 py-4">
                                {{this.observacao}}
                            </td>
                            <td class="px-6 py-4 flex text-right">
                                <a href="/atualizar/{{this.id}}" class="ml-2 font-medium text-blue-600 dark:text-blue-500 hover:underline">Editar</a>
                                <a data-modal-target="default-modal-{{this.id}}" data-modal-toggle="default-modal-{{this.id}}" class="cursor-pointer ml-2 font-medium text-red-600 dark:text-red-500 hover:underline">Apagar</a>
                            </td>
                        </tr>

                        <!-- Main modal -->
                        <div id="default-modal-{{this.id}}" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                            <div class="relative p-4 w-full max-w-2xl max-h-full">
                                <!-- Modal content -->
                                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                                    <!-- Modal header -->
                                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                                            Confirmação de exclusão
                                        </h3>
                                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="default-modal">
                                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                            </svg>
                                            <span class="sr-only">Cancelar</span>
                                        </button>
                                    </div>
                                    <!-- Modal body -->
                                    <div class="p-4 md:p-5 space-y-4">
                                        <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
                                            Tem certeza que deseja excluir o agendamento de <b>{{this.nome}}</b>?
                                        </p>
                                    </div>
                                    <!-- Modal footer -->
                                    <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
                                        <form action="/apagar/{{this.id}}" method="post">
                                            <button data-modal-hide="default-modal-{{this.id}}" type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Excluir</button>
                                            <button data-modal-hide="default-modal-{{this.id}}" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Cancelar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>